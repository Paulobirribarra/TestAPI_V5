<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Consultar Facturas</title>
    <link rel="stylesheet" href="/css/styles.css">
    <style>
        /* Estilo básico para el mensaje de éxito */
        #mensajeExito {
            background-color: #28a745;
            color: white;
            padding: 10px;
            margin-top: 20px;
            text-align: center;
            border-radius: 5px;
            display: none;
        }

        /* Estilo básico para el ícono de carga */
        #loadingIcon {
            display: none;
            text-align: center;
            margin-top: 20px;
        }

        #loadingIcon img {
            width: 50px;
            height: 50px;
        }
    </style>
</head>
<body>
    <%- include('partials/header') %>

    <main class="container">
        <h1>Consultar Facturas</h1>

        <form id="consulta-form">
            <label for="tipoConsulta">Tipo de Consulta:</label>
            <select id="tipoConsulta">
                <option value="dia">Por Día</option>
                <option value="mes">Por Mes</option>
            </select>

            <div id="fecha-container">
                <label for="fecha">Selecciona una Fecha:</label>
                <input type="date" id="fecha">
            </div>

            <div id="mes-container" style="display: none;">
                <label for="mes">Mes:</label>
                <input type="month" id="mes">
            </div>

            <button type="submit">Consultar</button>
        </form>

        <!-- Ícono de carga -->
        <div id="loadingIcon">
            <img src="/path/to/loading-icon.gif" alt="Cargando..." />
        </div>

        <!-- Mensaje de éxito -->
        <div id="mensajeExito">Consulta realizada con éxito. Puedes volver al inicio para ver los datos.</div>

        <div id="resultado"></div>
    </main>

    <script>
        document.getElementById('tipoConsulta').addEventListener('change', function() {
            if (this.value === 'dia') {
                document.getElementById('fecha-container').style.display = 'block';
                document.getElementById('mes-container').style.display = 'none';
            } else {
                document.getElementById('fecha-container').style.display = 'none';
                document.getElementById('mes-container').style.display = 'block';
            }
        });

        document.getElementById('consulta-form').addEventListener('submit', async function(event) {
            event.preventDefault();

            let tipo = document.getElementById('tipoConsulta').value;
            let url = '/api/consulta';

            // Muestra el ícono de carga
            document.getElementById('loadingIcon').style.display = 'block';

            if (tipo === 'dia') {
                let fecha = document.getElementById('fecha').value;
                url += `?fecha=${fecha}`;
            } else {
                let mes = document.getElementById('mes').value.split('-');
                url += `?mes=${mes[1]}&anio=${mes[0]}`;
            }

            // Realizar la consulta a la API
            let response = await fetch(url);
            let data = await response.json();

            // Ocultar el ícono de carga
            document.getElementById('loadingIcon').style.display = 'none';

            // Mostrar el mensaje de éxito
            document.getElementById('mensajeExito').style.display = 'block';

            // Mostrar el resultado de la consulta
            document.getElementById('resultado').innerHTML = `<pre>${JSON.stringify(data, null, 2)}</pre>`;
        });
    </script>

    <%- include('partials/footer') %>
</body>
</html>
